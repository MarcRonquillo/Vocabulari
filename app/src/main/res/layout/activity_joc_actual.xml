<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.idi.marc.vocabulari.JocActualActivity"
    android:clickable="false"
    android:background="@drawable/llibres">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titolModeJoc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Punts"
        android:id="@+id/PuntsText"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:textSize="20dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Punts"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"
        android:textSize="20dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Errades"
        android:id="@+id/ErradesText"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="90dp"
        android:textSize="20dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Errades"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="120dp"
        android:textColor="#ffffffff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idioma1"
        android:layout_marginLeft="165dp"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/Errades"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paraulaATraduir"
        android:layout_below="@+id/titolModeJoc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textColor="#ff000000"
        android:textSize="35dp"
        android:background="#ffe9e9e9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idioma2"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="260dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/traduccio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="TraducciÃ³"
        android:inputType="text"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="#ffe9e9e9"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/botoOK"
        android:onClick="onClickOk"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temps"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="170dp"
        android:background="#ff55ff58"
        android:enabled="true" />

</RelativeLayout>
